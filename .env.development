# ==============================================
# BookingHSE - DEVELOPMENT Environment
# ==============================================
# Configurazione per PostgreSQL self-hosted (migrazione da Supabase)

# ==============================================
# POSTGRESQL DATABASE CONFIGURATION
# ==============================================
DATABASE_URL=postgresql://postgres:your-password@localhost:5432/bookinghse_dev
PG_HOST=localhost
PG_PORT=5432
PG_USER=postgres
PG_PASSWORD=your-password
PG_DATABASE=bookinghse_dev

# Connection pool settings
PG_POOL_SIZE=20
PG_MAX_CONNECTIONS=100

# ==============================================
# AUTH CONFIGURATION (Self-hosted)
# ==============================================
# JWT Secret per autenticazione
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRATION=3600

# Session settings
SESSION_TIMEOUT=60

# ==============================================
# STRIPE TEST MODE CONFIGURATION
# ==============================================
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_key
STRIPE_SECRET_KEY=sk_test_your_stripe_test_secret
STRIPE_WEBHOOK_SECRET=whsec_test_your_webhook_secret

# ==============================================
# APPLICATION CONFIGURATION - DEV
# ==============================================
VITE_APP_URL=http://localhost:5173
VITE_APP_NAME=BookingHSE-DEV
NODE_ENV=development

# ==============================================
# STORAGE CONFIGURATION (S3/MinIO)
# ==============================================
STORAGE_TYPE=s3
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=bookinghse-dev
S3_REGION=us-east-1

# Oppure per filesystem locale durante lo sviluppo
# STORAGE_TYPE=local
# STORAGE_PATH=./uploads

VITE_MAX_FILE_SIZE=10

# ==============================================
# DEVELOPMENT TOOLS
# ==============================================
VITE_DEBUG=true
VITE_USE_MOCK_DATA=false

# ==============================================
# CORS - DEVELOPMENT
# ==============================================
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ==============================================
# EMAIL (Development - usa Mailtrap o simili)
# ==============================================
SMTP_HOST=sandbox.smtp.mailtrap.io
SMTP_PORT=587
SMTP_USER=your-mailtrap-user
SMTP_PASS=your-mailtrap-pass
FROM_EMAIL=dev@bookinghse.local

# ==============================================
# MAINTENANCE MODE
# ==============================================
MAINTENANCE_MODE=false
